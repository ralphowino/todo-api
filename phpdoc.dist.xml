<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>Todo API Docs</title>
    <parser>
        <target>public/docs/phpdocs/</target>
    </parser>
    <transformer>
        <target>data/output</target>
    </transformer>
    <transformations>
        <template name="responsive-twig" />
    </transformations>
    <files>
        <directory>app</directory>
        <ignore>app/config</ignore>
        <ignore>app/database</ignore>
        <ignore>app/start</ignore>
        <ignore>app/lang</ignore>
    </files>
</phpdoc>